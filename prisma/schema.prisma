   id       String    @id @default(auto()) @map("_id") @db.ObjectId
  title           String
  slug            String   @unique
  description     String?
  codeLink        String?
  liveLink        String?
  features        String[]
  technologies    String[]
  imageUrl        String?
  isActive Boolean

  category   Category  @relation(fields: [categoryId], references: [id])
  categoryId String @db.ObjectId
  
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt
}